<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".addbookFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="138dp"
                android:layout_height="143dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@mipmap/lendy_logo_circle_foreground" />

            <TextView
                android:id="@+id/addbookText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Add your book"
                android:textColor="@color/lendytext"
                android:textSize="44sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView"
                app:layout_constraintVertical_bias="0.212" />

            <EditText
                android:id="@+id/title_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@id/addbookText"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Title"
                android:textColor="@color/lendybg"/>

            <EditText
                android:id="@+id/author_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/title_book"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Author"
                android:textColor="@color/lendybg"/>

            <EditText
                android:id="@+id/descrip_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/author_book"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Description"
                android:textColor="@color/lendybg"/>

            <EditText
                android:id="@+id/price_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/descrip_book"
                android:ems="10"
                android:text="Price"
                android:textColor="@color/lendybg"
                android:inputType="textPersonName"/>
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/price_book"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:src="@tools:sample/avatars" />

            <Button
                android:id="@+id/add_pic_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Photo"
                android:backgroundTint="@color/lendybg"
                android:textColor="@color/lendytext"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/imageView2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <Button
                android:id="@+id/add_book_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textColor="@color/lendytext"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/addpic"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

        </LinearLayout>
    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>